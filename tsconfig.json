{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "bundler",
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "vite/client",
      "node"
    ],
    "skipLibCheck": true
  },
  "include": ["src", "index.d.ts" ],
  "exclude": [
    "node_modules"
  ]
}